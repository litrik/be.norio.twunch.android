<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/twunch_item_root"
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/Theme.Twunch">

	<LinearLayout android:layout_width="70sp" android:layout_height="fill_parent" android:padding="10dp"
		android:orientation="vertical" android:background="@color/twunchItemBar">

		<TextView android:id="@+id/twunchDays" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:paddingBottom="7sp" android:layout_gravity="center" android:textColor="@color/twunchItemBarText"
			android:textStyle="bold" />

		<TextView android:id="@+id/twunchDistance" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_gravity="center" android:textColor="@color/twunchItemBarText"
			android:textStyle="bold" />

	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp"
		android:orientation="vertical">

		<TextView android:id="@+id/twunchTitle" android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textStyle="bold" android:textSize="19sp" android:textColor="@color/twunchItemTitle" android:paddingBottom="4dp" />

		<TextView android:id="@+id/twunchDate" android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingBottom="4dp" />

		<TextView android:id="@+id/twunchAddress" android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingBottom="4dp" />

	</LinearLayout>

</LinearLayout>
