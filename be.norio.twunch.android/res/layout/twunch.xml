<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/twunch"
	android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="10dp">

	<TextView android:id="@+id/twunchTitle" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textStyle="bold" android:textSize="19sp" android:textColor="@color/twunchItemTitle" android:paddingBottom="4dp" />

	<TextView android:id="@+id/twunchDate" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingBottom="4dp" />

	<TextView android:id="@+id/twunchAddress" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingBottom="4dp" />

	<TextView android:id="@+id/twunchNote" android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:textSize="15sp" android:paddingBottom="4dp" android:textColor="#CC9999" />

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingBottom="8dp">

		<TextView android:id="@+id/twunchDays" android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text=" - " android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/twunchDistance" android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text=" - " android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/twunchNumberParticipants" android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</LinearLayout>

	<TextView android:layout_height="wrap_content" android:id="@+id/twunchParticipants" android:layout_width="wrap_content"
		android:lineSpacingMultiplier="1.5" android:textSize="15sp" />

</LinearLayout>
