<?xml version="1.0" encoding="UTF-8"?>
<project name="be.norio.twunch.android" default="build-release">

	<!-- DO NOT call this build file directly -->
	<!-- Call a target in build.xml instead -->

	<property name="root" value="." />

	<echo message="Building in ${basedir}" />

	<property file="${root}/build/local.properties" />
	<property file="${root}/build/build.properties" />

	<property name="work" value="." />
	<property name="dist" value="${root}/dist" />
	<property name="source.dir" value="src" />
	<property name="out.dir" value="bin" />

	<mkdir dir="${dist}" />

	<!-- Dummy property file to prevent that Eclipse complains about imports in this build file -->
	<property file="local.properties" />

	<fail unless="sdk.dir" message="${sdk.dir} is not set in local.properties" />

	<import file="${sdk.dir}/tools/ant/build.xml" />

	<target name="clean" description="Clean up">
		<delete dir="work" />
		<delete dir="dist" />
	</target>

	<property file="${work}/project.properties" />

	<target name="generate-build-properties">
		<!-- Generate BuildProperties.java -->
		<path id="android.antlibs">
			<pathelement path="${sdk.dir}/tools/lib/anttasks.jar" />
		</path>
		<taskdef name="xpath" classname="com.android.ant.XPathTask" classpathref="android.antlibs" />
		<xpath input="${root}/AndroidManifest.xml" expression="/manifest/@android:versionName" output="twunch.version.name" />
		<xpath input="${root}/AndroidManifest.xml" expression="/manifest/@android:versionCode" output="twunch.version.code" />

		<mkdir dir="${work}/gen" />
		<echoproperties format="xml" destfile="${work}/gen/BuildProperties.xml">
			<propertyset>
				<propertyref prefix="twunch." />
			</propertyset>
		</echoproperties>
		<xslt style="${root}/build/properties2java.xsl" in="${work}/gen/BuildProperties.xml" out="${work}/gen/be/norio/twunch/android/BuildProperties.java"
			force="true">
			<param name="package" expression="be.norio.twunch.android" />
		</xslt>
		<xslt style="${root}/build/properties2resource.xsl" in="${work}/gen/BuildProperties.xml" out="${work}/res/values/gen_build_properties.xml" force="true" />
	</target>

	<target name="copy-source">
		<mkdir dir="${work}/src/be/norio/twunch/android" />
		<copy todir="${work}/src/be/norio/twunch/android">
			<fileset dir="${root}/src/be/norio/twunch/android">
				<include name="**" />
			</fileset>
		</copy>
	</target>

	<target name="copy-other">
		<copy todir="${work}">
			<fileset dir="${root}">
				<include name=".classpath" />
				<include name="proguard-project.txt" />
				<include name="src/**" />
				<include name="res/**" />
				<include name="libs/**" />
				<include name="assets/**" />
				<exclude name="src/be/norio/twunch/android" />
			</fileset>
		</copy>
	</target>

	<target name="copy-abs">
		<unzip dest="${work}">
			<fileset dir="${root}/ext">
				<include name="JakeWharton-ActionBarSherlock-*.zip" />
			</fileset>
			<patternset>
				<include name="*/library/src/**" />
				<include name="*/library/res/**" />
			</patternset>
			<cutdirsmapper dirs="2" />
		</unzip>
		<replaceregexp match="com.actionbarsherlock.R" replace="be.norio.twunch.android.R" flags="g">
			<fileset dir="${work}">
				<include name="src/**" />
			</fileset>
		</replaceregexp>
		<replaceregexp match="package com.actionbarsherlock;" replace="package com.actionbarsherlock; import be.norio.twunch.android.R;" flags="g">
			<fileset dir="${work}">
				<include name="src/com/actionbarsherlock/*.java" />
			</fileset>
		</replaceregexp>
	</target>

	<target name="-pre-build" depends="generate-build-properties, copy-source, copy-other, copy-abs">
		<!-- BEGIN WORKAROUND ADT 20 -->
		<path id="project.all.jars.path">
			<fileset dir="libs" includes="*.jar" />
			<fileset dir="${sdk.dir}/tools/support" includes="annotations.jar" />
		</path>
		<!-- END WORKAROUND ADT 20 -->
	</target>

	<target name="build-release" depends="release" description="Build release">
		<copy file="${out.final.file}" tofile="${dist}/be.norio.twunch.android-${twunch.version.name}-${env}.apk" />
	</target>

</project>
